{
  "compilerOptions": {
    "target": "ES2021",
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "lib": ["ES2022", "DOM"],
    "declaration": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "rootDir": ".",
    "allowJs": true,
    "paths": {
      "@aio/bootstrap": ["libs/bootstrap/src/index.ts"],
      "@aio/config": ["libs/config/src/index.ts"],
      "@aio/i18n": ["libs/i18n/src/index.ts"]
    }
  }
}
